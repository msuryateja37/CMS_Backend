generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////////////////////////////////////
// ENUMS
//////////////////////////////////////////////////////

enum IncidentStatus {
  RAISED
  UNDER_REVIEW
  REJECTED
  ASSIGNED
  INVESTIGATION_IN_PROGRESS
  TASK_IN_PROGRESS
  WAITING_APPROVAL
  COMPLETED
  REOPENED
  CLOSED
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum InvoiceStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AuditAction {
  INSERT
  UPDATE
  DELETE
}

//////////////////////////////////////////////////////
// MASTER TABLES
//////////////////////////////////////////////////////

// MASTER TABLES
//////////////////////////////////////////////////////

model Province {
  id        String     @id @default(uuid())
  name      String     @unique
  buildings Building[]
  users     User[]
  createdAt DateTime   @default(now())
}

model Building {
  id         String     @id @default(uuid())
  name       String
  address    String?
  postalCode String?
  latitude   Float?
  longitude  Float?
  province   Province   @relation(fields: [provinceId], references: [id])
  provinceId String
  incidents  Incident[]
  inspections Inspection[]
  drills     Drill[]
  equipment  Equipment[]
  departments Department[]
  createdAt  DateTime   @default(now())
}

model Department {
  id         String   @id @default(uuid())
  name       String   @unique
  building   Building? @relation(fields: [buildingId], references: [id])
  buildingId String?
  users      User[]
  incidents  Incident[]
}

//////////////////////////////////////////////////////
// USER & RBAC
//////////////////////////////////////////////////////

model User {
  id           String      @id @default(uuid())
  name         String
  email        String      @unique
  phone        String?
  employeeNumber String?   @unique
  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId String?
  province     Province?   @relation(fields: [provinceId], references: [id])
  provinceId   String?

  roles         UserRole[]
  notifications Notification[]

  createdAt DateTime  @default(now())
  isActive  Boolean   @default(true)
  lastLoginAt DateTime?
  deletedAt DateTime?

  // Back-relations for Incident/Task/etc.
  reportedIncidents    Incident[]           @relation("ReportedBy")
  assignedIncidents    IncidentAssignment[] @relation("AssignedTo")
  assignedByIncidents  IncidentAssignment[] @relation("AssignedBy")
  incidentComments     IncidentComment[]
  incidentStatusLogs   IncidentStatusLog[]
  uploadedMedia        IncidentMedia[]      @relation("MediaUploader")
  investigations       Investigation[]
  tasksAssigned        Task[]
  inspectionsConducted Inspection[]         @relation("Inspector")
}

model Role {
  id          String           @id @default(uuid())
  name        String           @unique
  description String?
  permissions RolePermission[]
  users       UserRole[]
}

model Permission {
  id     String           @id @default(uuid())
  name   String           @unique
  module String
  roles  RolePermission[]
}

model RolePermission {
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

model UserRole {
  userId String
  roleId String

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

//////////////////////////////////////////////////////
// INCIDENT CORE
model Incident {
  id               String         @id @default(uuid())
  incidentNumber   String         @unique
  type             String?        // Added for compatibility
  description      String
  category         String
  severity         String
  immediateActions String?
  otherActions     String?        // Additional actions taken
  impact           String?
  location         String?        // Location description
  peopleImpacted   Int?           // Number of people impacted
  status           IncidentStatus @default(RAISED)

  building   Building @relation(fields: [buildingId], references: [id])
  buildingId String

  department   Department? @relation(fields: [departmentId], references: [id])
  departmentId String?

  reportedBy   User   @relation("ReportedBy", fields: [reportedById], references: [id])
  reportedById String

  latitude   Float?
  longitude  Float?
  occurredAt DateTime

  tasks           Task[]
  investigations  Investigation[]
  invoices        Invoice[]
  slaTracking     IncidentSLATracking?
  comments        IncidentComment[]
  statusLogs      IncidentStatusLog[]
  assignments     IncidentAssignment[]
  media           IncidentMedia[]
  impactedPeople  ImpactedPerson[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  isEscalated      Boolean   @default(false)
  escalatedAt      DateTime?
  escalationReason String?

  isActive  Boolean   @default(true)
  deletedAt DateTime?
}

model ImpactedPerson {
  id         String   @id @default(uuid())
  name       String
  email      String
  phone      String?
  incident   Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)
  incidentId String
  createdAt  DateTime @default(now())
}

// ALIAS for backward compatibility or direct usage by CasesService if refactoring is hard
// But better to migrate code. For now, adding missing specialized models.

model IncidentMedia {
  id           String   @id @default(uuid())
  fileUrl      String
  fileType     String
  uploaderRole String?
  uploadedBy   User?    @relation("MediaUploader", fields: [uploadedById], references: [id])
  uploadedById String?
  incident     Incident @relation(fields: [incidentId], references: [id])
  incidentId   String
  uploadedAt   DateTime @default(now())
}

