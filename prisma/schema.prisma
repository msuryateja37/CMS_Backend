//////////////////////////////////////////////////////
// REVIEW & ASSIGNMENT
//////////////////////////////////////////////////////

model IncidentAssignment {
  id           String   @id @default(uuid())
  incident     Incident @relation(fields: [incidentId], references: [id])
  incidentId   String
  assignedTo   User     @relation("AssignedTo", fields: [assignedToId], references: [id])
  assignedToId String
  assignedBy   User     @relation("AssignedBy", fields: [assignedById], references: [id])
  assignedById String
  assignedAt   DateTime @default(now())
}

model IncidentComment {
  id          String   @id @default(uuid())
  incident    Incident @relation(fields: [incidentId], references: [id])
  incidentId  String
  comment     String
  commentedBy User     @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime @default(now())
}

model IncidentStatusLog {
  id         String         @id @default(uuid())
  incident   Incident       @relation(fields: [incidentId], references: [id])
  incidentId String
  oldStatus  IncidentStatus?
  newStatus  IncidentStatus
  comments   String?
  changedBy  User           @relation(fields: [userId], references: [id])
  userId     String
  changedAt  DateTime       @default(now())
}

//////////////////////////////////////////////////////
// INVESTIGATION
//////////////////////////////////////////////////////

model Investigation {
  id             String    @id @default(uuid())
  incident       Incident  @relation(fields: [incidentId], references: [id])
  incidentId     String
  practitioner   User      @relation(fields: [practitionerId], references: [id])
  practitionerId String
  siteLat        Float?
  siteLng        Float?
  notes          String?
  startedAt      DateTime?
  completedAt    DateTime?
}

//////////////////////////////////////////////////////
// TASKS
//////////////////////////////////////////////////////

model Task {
  id           String      @id @default(uuid())
  title        String
  description  String?
  status       TaskStatus  @default(PENDING)
  dueDate      DateTime?
  incident     Incident    @relation(fields: [incidentId], references: [id])
  incidentId   String
  assignedTo   User        @relation(fields: [assignedToId], references: [id])
  assignedToId String
  proofs       TaskProof[]
  invoices     Invoice[]
  createdAt    DateTime    @default(now())
}

model TaskProof {
  id        String   @id @default(uuid())
  fileUrl   String
  task      Task     @relation(fields: [taskId], references: [id])
  taskId    String
  createdAt DateTime @default(now())
}

//////////////////////////////////////////////////////
// INVOICES
//////////////////////////////////////////////////////

model Invoice {
  id          String        @id @default(uuid())
  invoiceNumber String?
  amount      Float
  description String?
  status      InvoiceStatus @default(PENDING)
  receivedDate DateTime?    @default(now())
  task        Task          @relation(fields: [taskId], references: [id])
  taskId      String
  createdAt   DateTime      @default(now())
  incident    Incident?     @relation(fields: [incidentId], references: [id])
  incidentId  String?
  actions     InvoiceAction[]
}

//////////////////////////////////////////////////////
// SLA & ESCALATION
//////////////////////////////////////////////////////

model SLA {
  id                   String                @id @default(uuid())
  category             String
  severity             String
  resolutionMinutes    Int
  responseMinutes      Int
  createdAt            DateTime              @default(now())
  incidentSLATrackings IncidentSLATracking[]
}

model IncidentSLATracking {
  id                 String    @id @default(uuid())
  incident           Incident  @relation(fields: [incidentId], references: [id])
  incidentId         String    @unique
  sla                SLA       @relation(fields: [slaId], references: [id])
  slaId              String
  responseDueAt      DateTime
  resolutionDueAt    DateTime
  responseBreached   Boolean   @default(false)
  resolutionBreached Boolean   @default(false)
  breachedAt         DateTime?
}

model EscalationRule {
  id               String @id @default(uuid())
  category         String
  severity         String
  breachType       String
  escalateToRoleId String
  escalateAfterMin Int
}

//////////////////////////////////////////////////////
// NOTIFICATIONS
//////////////////////////////////////////////////////

model Notification {
  id          String   @id @default(uuid())
  title       String
  message     String
  module      String
  referenceId String?
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model SyncQueue {
  id        String   @id @default(uuid())
  action    String
  entity    String
  entityId  String
  payload   Json
  status    String   @default("PENDING")
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
//////////////////////////////////////////////////////
// AUDIT LOG
//////////////////////////////////////////////////////

model AuditLog {
  id        String      @id @default(uuid())
  tableName String
  recordId  String
  action    AuditAction
  oldData   Json?
  newData   Json?
  changedBy String?
  changedAt DateTime    @default(now())
}
