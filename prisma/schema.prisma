// OHS & RISK MANAGEMENT

model RiskRegister {
  id           String   @id @default(uuid())
  title        String
  description  String?
  riskLevel    String
  mitigation   String?
  departmentId String?
  createdById  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Jsa {
  id          String   @id @default(uuid())
  jobName     String
  hazards     Json?
  controls    Json?
  remarks     String?
  status      String?  @default("Draft")
  createdById String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("jsa") // Map to lowercase table name as per raw query usage
}

model Inspection {
  id          String              @id @default(uuid())
  type        String
  status      String              @default("SCHEDULED")
  building    Building?           @relation(fields: [buildingId], references: [id])
  buildingId  String?
  inspector   User?               @relation("Inspector", fields: [inspectorId], references: [id])
  inspectorId String?
  conductedAt DateTime?
  findings    InspectionFinding[]
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
}

model InspectionFinding {
  id             String     @id @default(uuid())
  inspection     Inspection @relation(fields: [inspectionId], references: [id])
  inspectionId   String
  finding        String
  actionRequired String?
  status         String     @default("OPEN")
  dueDate        DateTime?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
}

// EMERGENCY

model EmergencyPlan {
  id          String   @id @default(uuid())
  title       String
  version     String
  fileUrl     String?
  documentPath String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Drill {
  id            String    @id @default(uuid())
  name          String
  type          String
  scheduledDate DateTime
  status        String    @default("SCHEDULED")
  building      Building? @relation(fields: [buildingId], references: [id])
  buildingId    String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Equipment {
  id             String    @id @default(uuid())
  name           String
  type           String
  serialNumber   String?
  status         String    @default("OPERATIONAL")
  building       Building? @relation(fields: [buildingId], references: [id])
  buildingId     String?
  lastServiceDate DateTime?
  nextServiceDate DateTime?
  lastChecked     DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

// KPI & PDCA

model Kpi {
  id          String      @id @default(uuid())
  name        String
  targetValue Float
  unit        String
  frequency   String
  records     KpiRecord[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model KpiRecord {
  id        String   @id @default(uuid())
  kpi       Kpi      @relation(fields: [kpiId], references: [id])
  kpiId     String
  value     Float
  period    String
  recordedAt DateTime @default(now())
}

model PdcaAction {
  id          String   @id @default(uuid())
  title       String
  phase       String   // Plan, Do, Check, Act
  description String?
  status      String   @default("Pending")
  ownerId     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// INVOICE ACTIONS (Missing in previous schema review)

model InvoiceAction {
    id        String   @id @default(uuid())
    invoice   Invoice  @relation(fields: [invoiceId], references: [id])
    invoiceId String
    action    String
    actorId   String
    timestamp DateTime @default(now())
}

